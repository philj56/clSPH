#version 150 core

in vec3 position;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
	gl_Position = projection * view * model * vec4(position, 1.0);
	gl_PointSize = 80.0 * (1.0 - gl_Position.z / gl_Position.w);
}
